<h1>User Home</h1>

<h4>My Events</h4>

<% if current_user.admin %>
  <ul>
    <p>Events:</p>
    <% @owned_events.each do |owned_event| %>
      <a href="/events/<%= owned_event.id %>">
        <li><%= owned_event.title %></li></a> 
    <% end %>
  </ul>
  <ul>
    <p>Services:</p>
    <% @managed_services.each do |managed_service| %>
      <a href="/services/<%= managed_service.id %>">
        <li><%= managed_service.title %></li></a> 
    <% end %>
  </ul>
<% else %>
  <ul>
    <p>Events:</p>
    <% @user_events.each do |user_event| %>
      <a href="/events/<%= user_event.id %>">
        <li><%= user_event.title %></li></a> 
    <% end %>
  </ul>
  <ul>
    <p>Services:</p>
    <% @user_services.each do |user_service| %>
      <a href="/services/<%= user_service.id %>">
        <li><%= user_service.title %></li></a> 
    <% end %>
  </ul>
<% end %>

<h4>All Events</h4>
<ul>
  <% @all_events.each do |event| %>
    <a href="/events/<%= event.id %>">
      <li><%= event.title %></li></a> 
  <% end %>
</ul>

<h4>All Services</h4>
<ul>
  <% @all_services.each do |service| %>
    <a href="/services/<%= service.id %>">
      <li><%= service.title %></li></a> 
  <% end %>
</ul>

<%= link_to "Sign Out", "/users/sign_out", method: :delete %>


<div class="col-md-8">

  <div class="ibox float-e-margins">
    <div class="ibox-title">

      <h5>Feed</h5>
      <div class="ibox-tools">
        <a class="collapse-link">
          <i class="fa fa-chevron-up"></i>
        </a>
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          <i class="fa fa-wrench"></i>
        </a>
        <ul class="dropdown-menu dropdown-user">
          <li><a href="#">Config option 1</a>
          </li>
          <li><a href="#">Config option 2</a>
          </li>
        </ul>
        <a class="close-link">
          <i class="fa fa-times"></i>
        </a>
      </div>
    </div>

    <div class="ibox-content">

      <div>
        <div class="feed-activity-list">

          <% @messages.each do |message| %>
            <div class="feed-element">
              <a href="#" class="pull-left">
                <img alt="image" class="img-circle" src="img/a2.jpg">
              </a>
              <div class="media-body ">
                <small class="pull-right">2h ago</small>
                <strong><%= message.sender.full_name %></strong> posted message on <strong>Monica Smith</strong> site. <br>
                <small class="text-muted">Today 2:10 pm - 12.06.2014</small>
                <div class="well">
                  <%= message.body %>
                </div>
                <div class="pull-right">
                  <a class="btn btn-xs btn-white"><i class="fa fa-thumbs-up"></i> Like </a>
                  <a class="btn btn-xs btn-white"><i class="fa fa-heart"></i> Love</a>
                  <a class="btn btn-xs btn-primary"><i class="fa fa-pencil"></i> Message</a>
                </div>
              </div>
            </div>
          <% end %>

        </div>

        <button class="btn btn-primary btn-block m"><i class="fa fa-arrow-down"></i> Show More</button>

      </div>
    </div>
  </div>
</div>





