<div class="wrapper wrapper-content animated fadeInRight ecommerce">

  <div class="row">
    <div class="col-lg-12">
      <div class="tabs-container">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#tab-1"> Edit Service</a></li>
        </ul>
        <div class="tab-content">
          <div id="tab-1" class="tab-pane active">
            <div class="panel-body">
              <%= form_tag "/services/#{@service.id}" , method: :patch do %>
                <fieldset class="form-horizontal">
                  <div class="form-group">
                    <%= label_tag :title, "Title:", :class => "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= text_field_tag :title, @service.title, :class => "form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= label_tag :description, "Description:", :class => "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= text_field_tag :description, @service.description, :class => "form-control" %>
                    </div>
                  </div>
                  <div>
                    <%= button_tag 'Submit', class: "btn btn-primary btn-block m" %>
                  </div>
                </fieldset>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>









