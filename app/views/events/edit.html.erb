<div class="wrapper wrapper-content animated fadeInRight ecommerce">

  <div class="row">
    <div class="col-lg-12">
      <div class="tabs-container">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#tab-1"> Event info</a></li>
        </ul>
        <div class="tab-content">
          <div id="tab-1" class="tab-pane active">
            <div class="panel-body">
              <%= form_tag "/events/#{@event.id}" , method: :patch do %>
                <fieldset class="form-horizontal">
                  <div class="form-group">
                    <%= label_tag :title, "Title:", :class => "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= text_field_tag :title, @event.title, :class => "form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= label_tag :date, "Date:", :class => "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= text_field_tag :date, @event.date, :class => "form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= label_tag :start_time, "Start Time:", :class => "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= text_field_tag :start_time, @event.readable_time(@event.start_time), :class => "form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= label_tag :end_time, "End Time:", :class => "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= text_field_tag :end_time, @event.readable_time(@event.end_time), :class => "form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= label_tag :location, "Location:", :class => "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= text_field_tag :location, @event.location, :class => "form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= label_tag :description, "Description:", :class => "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= text_field_tag :description, @event.description, :class => "form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= label_tag :capacity, "Capacity:", :class => "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= text_field_tag :capacity, @event.capacity, :class => "form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= label_tag :is_private, "Private Appointment:", :class => "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= text_field_tag :is_private, @event.is_private, :class => "form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= label_tag :image_url, "Image URL:", :class => "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                      <%= text_field_tag :image_url, @event.image_url, :class => "form-control" %>
                    </div>
                  </div>
                  <div>
                    <%= button_tag 'Submit', class: "btn btn-primary btn-block m" %>
                  </div>
                </fieldset>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>









